{
  "manifest_version": 2,
  "name": "Chrome OS Player PoC",
  "version": "0.0.0.0",
  "permissions": [
    "file://*",
    "<all_urls>",
    {"fileSystem": ["write", "retainEntries", "directory", "requestFileSystem"]},
    "unlimitedStorage",
    "system.cpu",
    "system.memory",
    "system.storage",
    "system.display",
    "serial",
    "webview",
    "storage"
  ],
  "minimum_chrome_version": "52",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.bundle.js"
      ]
    }
  },
  "sockets": {
    "udp": {
      "send": [""],
      "bind": [""],
      "multicastMembership": ""
    },
    "tcp": {
      "connect": [""]
    },
    "tcpServer": {
      "listen": ["*:*"]
    }
 },
 "webview": {
  "partitions": [
      {
        "name": "trusted",
        "accessible_resources": ["local-viewer/*"]
      }
    ]
  },
  "offline_enabled": true,
  "kiosk_enabled": true,
  "kiosk_only": false,
  "kiosk": {
    "required_platform_version": "10032.86.0"
  }
}